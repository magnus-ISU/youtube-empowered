{
	"manifest_version": 2,
	"name": "Youtube Empowered",
	"version": "0.3",
	"description": "Tweaks youtube to be more focused and powerful.",
	"author": "Magnus Anderson",
	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/*"],
			"js": ["src/Player.js"],
			"run_at": "document_end"
		}
	],
	"background": {
		"persistent": false,
		"scripts": ["src/SetTheaterCookie.js", "src/MessageHandler.js"]
	},
	"permissions": ["storage", "cookies", "*://*.youtube.com/*"]
}
